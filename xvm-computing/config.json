{
    "service_name": "xvm-computing",
    "vulnbox_directory": "{service_name}",
    "vulnbox": {
        "files": [
            "Dockerfile",
            "docker-compose.yml",
            "./src/server.py",
            "./src/build/xvm",
            "./src/build/xinfo",
            "./src/build/xasm",
            "./src/build/xdis",
            "run.sh"
        ],
        "exclude": [
            "*.pyc",
            "__pycache__/",
            ".git/",
            "*.log",
            ".DS_Store",
            "*.swp",
            "*.tmp",
            ".vscode/",
            ".idea/"
        ]
    },
    "checker": {
        "files": [
            "./checker/checker.py",
            "./checker/flag_templates.py",
            "./checker/service_checks.py",
            "checker.sh",
            "src/"
        ],
        "exclude": [
            "*.pyc",
            "__pycache__/",
            ".git/",
            "*.log",
            ".DS_Store",
            "*.swp",
            "*.tmp",
            ".vscode/",
            ".idea/"
        ]
    },
    "post_install": [
        "cd /opt/checker/xvm-computing/src && cmake -B build && cd build && make -j$(nproc)"
    ]
}
