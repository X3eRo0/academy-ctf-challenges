{
    "service_name": "xvm-computing",
    "vulnbox_directory": "{service_name}",
    "vulnbox": {
        "files": [
            "Dockerfile",
            "docker-compose.yml",
            "server.py",
            "./build/xvm",
            "./build/xinfo",
            "./build/xasm",
            "./build/xdis",
            "deploy.sh"
        ],
        "exclude": [
            "*.pyc",
            "__pycache__/",
            ".git/",
            "*.log",
            ".DS_Store",
            "*.swp",
            "*.tmp",
            ".vscode/",
            ".idea/"
        ]
    },
    "checker": {
        "files": [
            "checker.py",
            "flag_templates.py",
            "service_checks.py",
            "checker.sh",
            "xasm/",
            "xvm/",
            "xdbg/",
            "xlib/",
            "common/",
            "ropgadget/",
            "exploits/",
            "CMakeLists.txt"
        ],
        "exclude": [
            "*.pyc",
            "__pycache__/",
            ".git/",
            "*.log",
            ".DS_Store",
            "*.swp",
            "*.tmp",
            ".vscode/",
            ".idea/"
        ]
    },
    "post_install": [
        "cd /opt/checker/xvm-computing && mkdir -p build && cd build && cmake .. && make -j$(nproc)"
    ]
}
